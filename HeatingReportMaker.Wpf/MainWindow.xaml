<Window x:Class="HeatingReportMaker.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeatingReportMaker.Wpf"
        mc:Ignorable="d"
        Title="Heating Report Maker" SizeToContent="Height" Width="480" Language="ru-RU" WindowStartupLocation="CenterScreen" Background="White">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20 10 20 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Формирование отчёта по отоплению" FontWeight="Bold" FontSize="17" HorizontalAlignment="Center" Margin="0 0 0 15"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Файл с данными:"/>
            <TextBox x:Name="filePathTextBox" Grid.Column="1" Margin="10 0 10 0" VerticalAlignment="Center" BorderThickness="2" BorderBrush="Gray" FontSize="14"/>
            <Button Grid.Column="2" Content="Обзор..." Padding="5 2 5 2" VerticalAlignment="Center" Click="BrowseButton_Click"/>
        </Grid>
        <Grid Grid.Row="2" Margin="0 10 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Номер квартиры:"/>
            <TextBox x:Name="apartmentNumberTextBox" Grid.Column="1" Width="36" Margin="7 0 0 0" HorizontalAlignment="Left" BorderThickness="2" BorderBrush="Gray" FontSize="14"/>
        </Grid>
        <StackPanel Grid.Row ="3">
            <TextBlock Text="Параметры:" Margin="0 0 0 5"/>
            <CheckBox x:Name="roundGkalCheckBox" Content="Округлять Гкал" IsChecked="True" Margin="0 0 0 5" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
            <CheckBox x:Name="createWordReportCheckBox" Content="Создавать Word-отчёт" IsChecked="True" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
        </StackPanel>
        <Grid Grid.Row="4" Margin="0 30 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="statusTextBlock" Text="" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Right" />
            <Button Grid.Column="1" Content="Сформировать и сохранить" Padding="5"  Margin="20 0 0 0" VerticalAlignment="Top" Click="GenerateButton_Click"/>
        </Grid>
    </Grid>
</Window>
